rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the items collection
    match /items/{itemId} {
      // Allow public read access
      allow read: if true;

      // Allow authenticated users to create items
      allow create: if request.auth != null;

      // Allow only the owner to update or delete their items
      allow update, delete: if request.auth != null 
                           && request.auth.uid == resource.data.userId;
    }

    // Rules for the savedListings collection
    match /savedListings/{document} {
      // Allow authenticated users to read their saved listings
      allow read: if request.auth != null 
                 && request.auth.uid == resource.data.userId;

      // Allow authenticated users to create saved listings
      allow create: if request.auth != null 
                   && request.resource.data.userId == request.auth.uid;

      // Allow only the owner to delete their saved listings
      allow delete: if request.auth != null 
                   && resource.data.userId == request.auth.uid;

      // Allow authenticated users to query their saved listings
      allow list: if request.auth != null;
    }
  }
}