{
    "hosting": {
      "public": "build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    "storage": {
      "rules": "storage.rules"
    },
    "emulators": {
      "storage": {
        "port": 9199
      },
      "ui": {
        "enabled": true,
        "port": 4000
      },
      "firestore": {
        "port": 8080
      }
    }
  }